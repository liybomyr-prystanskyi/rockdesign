{{#mol-review-client-item}}
<div class="review-client__main__item">
	<div class="row">
		{{#reviews-items}}
		<div class="review-client__main__item__info-client col-12 col-lg-6">
			<div class="review-global">
				<div class="review-client__main__item__info-client__main">
					{{#client-image}}
					<div class="review-client__main__item__info-client__main__name">
						<img src="{{{client-image}}}" alt="{{{client-image-alt}}}">
						{{#name}}
						<p>{{{name}}}</p>
						{{/name}}
					</div>
					{{/client-image}}
					<div class="review-client__main__item__info-client__main__star">
						<div class="review-client__main__item__info-client__main__star__rate">
							<input type="radio" id="{{{id1}}}" type="radio" name="{{{start-name}}}" value="5" />
							<label for="{{{for-id1}}}">5 stars</label>
							<input class="checked-active" type="radio" id="{{{id2}}}" name="{{{start-name}}}" value="4" />
							<label for="{{{for-id2}}}">4 stars</label>
							<input type="radio" id="{{{id3}}}" type="radio" name="{{{start-name}}}" value="3" />
							<label for="{{{for-id3}}}">3 stars</label>
							<input type="radio" id="{{{id4}}}" type="radio" name="{{{start-name}}}" value="2" />
							<label for="{{{for-id4}}}">2 stars</label>
							<input type="radio" id="{{{id5}}}" type="radio" name="{{{start-name}}}" value="1" />
							<label for="{{{for-id5}}}">1 star</label>
						</div>
					</div>
				</div>
				{{#description}}
				<div class="review-client__main__item__info-client__description">
					<p>
						{{{description}}}
					</p>
				</div>
				{{/description}}
				<div class="review-client-gallery">
					{{{#image-bath-1}}}
					<a href="assets/img/open-gallery-1.png" data-toggle="lightbox" data-gallery="gallery">
						<img src="{{{image-bath-1}}}" alt="{{{image-bath-1-alt}}}" class="img-fluid  review-client-gallery__image">
					</a>
					{{{/image-bath-1}}}
					{{{#image-bath-2}}}
					<a href="assets/img/open-gallery-1.png" data-toggle="lightbox" data-gallery="gallery">
						<img src="{{{image-bath-2}}}" alt="{{{image-bath-2-alt}}}" class="img-fluid  review-client-gallery__image">
					</a>
					{{{/image-bath-2}}}
				</div>
				<div class="review-client__main__item__info-client__conclusion">
					<div class="row">
						<div class="col-12 col-lg-4">
							{{#text-plus}}
							<div class="review-client__main__item__info-client__conclusion__pros">
								<p>{{{text-plus}}}</p>
								{{#plus-span}}
								<span>{{{plus-span}}}</span>
								{{/plus-span}}
							</div>
							{{/text-plus}}
						</div>
						<div class="col-12 col-lg-4">
							{{#text-minus}}
							<div class="review-client__main__item__info-client__conclusion__negative">
								<p>{{{text-minus}}}</p>
								{{#minus-span}}
								<span>{{{minus-span}}}</span>
								{{/minus-span}}
							</div>
							{{/text-minus}}
						</div>
						<div class="col-12 col-lg-4">
							{{#data}}
							<div class="review-client__main__item__info-client__conclusion__data">
								<p>{{{data}}}</p>
							</div>
							{{/data}}
						</div>
					</div>
				</div>
			</div>
		</div>
		{{/reviews-items}}
	</div>
</div>
{{/mol-review-client-item}}