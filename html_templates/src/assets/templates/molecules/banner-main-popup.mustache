{{#mol-banner-main-popup}}
<div class="banner-main">
	<div class="banner-main__popup">
		<div class="modal fade" id="modal-center" tabindex="-1" role="dialog" aria-labelledby="modal-center-title"
			aria-hidden="true">
			<div class="modal-dialog modal-dialog-centered" role="document">
				<div class="my-modal-content">
					<div class="my-modal-header">
						<h5 class="modal-title" id="modal-title">Замовити дзвінок</h5>
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="my-modal-body">
						<form action="/">
							<div class="my-modal-body__inputs-form">
								<input type="text" id="input-name" placeholder="Ваше ім'я">
								<input type="tel" name="usrtel" placeholder="Номер телефону">
							</div>
							<div class="my-modal-body__submit-button">
								<input type="submit" value="Відправити" id="input-submit">
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
	<button type="button" class="modal-btn" data-toggle="modal" data-target="#modal-center">
		<img src="assets/img/header-phone.svg" alt="phone">
	</button>
</div>
{{/mol-banner-main-popup}}